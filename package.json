  "description": "BasicNodeApp",
  "main": "server.js",
  "private": true,
  "license": "ISC",
  "author": {
    "name": "Me",
    "email": "me@email.com"
  },
  "dependencies": {
    "body-parser": "^1.12.3",
    "compression": "^1.4.3",
    "cookie-parser": "^1.3.4",
    "express": "^4.12.3",
    "express-session": "^1.11.1",
    "flash": "^1.1.0",
    "jade": "^1.9.2",
    "serve-favicon": "^2.2.0",
    "stylus": "^0.51.1",
    "winston": "^1.0.0"
  },
  "devDependencies": {
    "errorhandler": "^1.3.5",
    "eslint": "^0.20.0",
    "live-reload": "^1.1.0",
    "mocha": "^2.2.4",
    "open": "^0.0.5",
    "opener": "^1.4.1",
    "parallelshell": "^1.1.1",
    "rimraf": "^2.3.3",
    "should": "^6.0.1",
    "uglify-js": "^2.4.20",
    "watch": "^0.16.0",
    "winston-growl": "^0.0.8"
  },
  "scripts": {
    "clean": "rimraf dist/* public/css/*.css public/js/*.js",
    "eslint": "eslint src",
    "test": "mocha src/test",
    "build:stylus": "rimraf public/css/*.css && stylus src/assets/styl -o public/css",
    "build:uglify": "",
    "build:dev": "npm run build:stylus",
    "prebuild": "npm run clean && npm run eslint && npm test",
    "build": "npm run build:dev",
    "watch:app": "nodemon -w src -e 'js' --exec node server.js",
    "watch:stylus": "npm run build:stylus --  --sourcemap-inline -w",
    "watch": "parallelshell \"npm run livereload\" \"npm run watch:stylus\" \"npm run watch:app\"",
    "open:dev": "opener http://localhost:3000",
    "livereload": "live-reload src --port 3001 --delay 1000",
    "dev": "npm run open:dev & npm run watch"
  }
}
